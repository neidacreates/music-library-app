<div id="<%= dom_id album %>">
    <p>
        <strong>Album Title:</strong>
        <%= album.title %>
    </p>

    <p>
        <strong>Artist:</strong>
        <%= album.artist.name %>
    </p>

    <p>
        <strong>Genre:</strong>
        <%= album.genre.name %>
    </p>

    <p>
        <strong>Release year:</strong>
        <%= album.release_year %>
    </p>
    
    <p>
        <strong>Format:</strong>
        <%= album.format %>
    </p>

    <p>
        <strong>Condition:</strong>
        <%= album.condition %>
    </p>

</div>
